<Page
    x:Class="IdReader.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IdReader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock FontSize="40" HorizontalAlignment="Left" Margin="20,20,0,0">设置</TextBlock>
        <StackPanel Margin="30,120,30,0">
            <ToggleButton Content="测试模式" HorizontalAlignment="Center" Checked="ToggleButton_Checked"  Loaded="ToggleButton_Loaded" Unchecked="ToggleButton_Unchecked"></ToggleButton>
            <Button  Content="安装驱动" Click="InstallDevice" HorizontalAlignment="Center">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="I" />
                </Button.KeyboardAccelerators>
            </Button>
        </StackPanel>
       
    </Grid>
</Page>
